@using MBA.Modulo2.App.ViewModels
@model ProdutoViewModel

@{
    ViewData["Title"] = "Delete";
}
<br />
<br />
<br />
<br />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-6">
            <div class="card-header"><div class="card-title"><h3>Are you sure you want to delete this?</h3></div></div>
            <div class="card-body">
                <div>
                    <h4>Produto Detail</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Preco)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Preco)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Estoque)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estoque)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Categoria)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Categoria.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Imagem)
                        </dt>
                        <dd class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.Imagem))
                            {
                                <br />
                                <img src="~/images/@Url.Content(Model.Imagem)" alt="Produto Image" width="150" />
                            }
                        </dd>
                    </dl>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group" style="display: flex; justify-content: space-between;">
                        <div><input type="submit" value="Delete" class="btn btn-danger" /></div>
                        <div><a asp-action="Index">Back to List</a></div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


