@using MBA.Modulo2.App.ViewModels
@model ClienteViewModel

@{
    ViewData["Title"] = "Excluir Cliente";
}

<br />
<br />
<br />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-6">
            <div class="card-header">
                <div class="card-title">
                    <h3>Tem certeza que deseja excluir este cliente?</h3>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <h4>Detalhes do Cliente</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CriadoEm)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CriadoEm)
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group" style="display: flex; justify-content: space-between;">
                        <div>
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

