@using MBA.Modulo2.App.ViewModels
@model CategoryViewModel

@{
    ViewData["Title"] = "Delete";
}
<br />
<br />
<br />
<br />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-6">
            <div class="card-header"><div class="card-title"><h3>Are you sure you want to delete this?</h3></div></div>
            <div class="card-body">
                <div>
                    <h4>Category Detail</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group" style="display: flex; justify-content: space-between;">
                        <div><input type="submit" value="Delete" class="btn btn-danger" /></div>
                        <div><a asp-action="Index">Back to List</a></div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>