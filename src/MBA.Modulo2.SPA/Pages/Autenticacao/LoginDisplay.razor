@using System.Security.Claims;
<AuthorizeView>
    <Authorized>
        <div class="user-info">
            <span class="user-name me-2">
                <i class="fas fa-user me-1"></i>
                @context.User.Identity.Name
            </span>
            <a href="LogOut" class="btn btn-outline-danger btn-sm header-btn">
                <i class="fas fa-sign-out-alt"></i>
                <span class="d-none d-lg-inline ms-1">Sair</span>
            </a>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="Login" class="btn btn-outline-primary btn-sm header-btn">
            <i class="fas fa-sign-in-alt"></i>
            <span class="d-none d-lg-inline ms-1">Login</span>
        </a>
    </NotAuthorized>
</AuthorizeView>