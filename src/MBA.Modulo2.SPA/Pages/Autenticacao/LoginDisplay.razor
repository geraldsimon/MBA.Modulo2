@using System.Security.Claims;
<AuthorizeView>
    <Authorized>
        <span class="user-name me-2">
            <i class="fas fa-user me-1"></i>
            @context.User.Identity.Name
        </span>
    </Authorized>
    <NotAuthorized>
        <a href="Login" class="btn btn-outline-primary btn-sm header-btn">
            <i class="fas fa-sign-in-alt"></i>
            <span class="d-none d-lg-inline ms-1">Login</span>
        </a>
    </NotAuthorized>
</AuthorizeView>