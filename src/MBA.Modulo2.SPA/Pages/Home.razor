@page "/"

<PageTitle>Home</PageTitle>

<div class="container-fluid py-4">
    <!-- Hero Section -->
    <div class="card-compra home-hero">
        <div class="card-compra-body">
            <img src="img/logo.png" class="logo" alt="Logo Boa Compra" />
            <h1 class="hero-title">Bem-vindo ao Boa Compra</h1>
            <p class="hero-subtitle">A melhor plataforma para comprar e vender Computadores, Games, Tvs e muito mais.</p>
            <a class="btn-compra btn-compra-primary btn-compra-lg" href="/Produto">
                <i class="fas fa-shopping-cart me-2"></i>
                Ver Produtos
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row home-stats">
        <div class="col-md-3">
            <div class="card-compra stats-card">
                <div class="card-compra-body">
                    <i class="fas fa-desktop stats-icon text-primary"></i>
                    <h5 class="stats-number">500+</h5>
                    <small class="stats-label">Computadores</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-compra stats-card">
                <div class="card-compra-body">
                    <i class="fas fa-gamepad stats-icon text-success"></i>
                    <h5 class="stats-number">300+</h5>
                    <small class="stats-label">Games</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-compra stats-card">
                <div class="card-compra-body">
                    <i class="fas fa-tv stats-icon text-info"></i>
                    <h5 class="stats-number">200+</h5>
                    <small class="stats-label">TVs</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-compra stats-card">
                <div class="card-compra-body">
                    <i class="fas fa-users stats-icon text-warning"></i>
                    <h5 class="stats-number">1000+</h5>
                    <small class="stats-label">Clientes</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories -->
    <div class="card-compra home-categories">
        <div class="card-compra-header">
            <h4>Categorias Principais</h4>
        </div>
        <div class="card-compra-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="card-compra category-card">
                        <img src="https://img.freepik.com/fotos-premium/computador-pessoal-pc-desktop-moderno-com-tela-led-ultra-hd-curvada-isolada-em-branco_613961-293.jpg" 
                             class="card-img-top category-image" 
                             alt="Computadores">
                        <div class="card-compra-body category-body">
                            <h5 class="category-title">
                                <i class="fas fa-desktop me-2"></i>
                                Computadores
                            </h5>
                            <p class="category-description">Encontre Computadores novos top de linha com as melhores configurações.</p>
                            <span class="badge-compra badge-compra-primary">Novidades</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-compra category-card">
                        <img src="https://decidircomprar.com.br/wp-content/uploads/2024/12/Melhor-Video-Game-Comprar-em-2025-1.webp" 
                             class="card-img-top category-image" 
                             alt="Games">
                        <div class="card-compra-body category-body">
                            <h5 class="category-title">
                                <i class="fas fa-gamepad me-2"></i>
                                Games
                            </h5>
                            <p class="category-description">Games dos retrô aos modernos. Diversão garantida para toda família.</p>
                            <span class="badge-compra badge-compra-success">Popular</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card-compra category-card">
                        <img src="https://www.lg.com/content/dam/channel/wcms/br/images/tv/32lr600bpsa_awzq_essp_br_c/gallery/1-1600-32LR600B.jpg/_jcr_content/renditions/thum-1600x1062.jpeg" 
                             class="card-img-top category-image" 
                             alt="TVs">
                        <div class="card-compra-body category-body">
                            <h5 class="category-title">
                                <i class="fas fa-tv me-2"></i>
                                TVs Smart
                            </h5>
                            <p class="category-description">As TVs smart com os melhores preços e qualidade de imagem 4K.</p>
                            <span class="badge-compra badge-compra-warning">Oferta</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-compra-footer">
            <a class="btn-compra btn-compra-outline-primary" href="/produto">
                Ver Todos os Produtos
                <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>