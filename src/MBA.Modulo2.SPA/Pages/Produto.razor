            "estoque" => produtosFiltradosTemp.OrderByDescending(p => p.Estoque),
            _ => produtosFiltradosTemp.OrderBy(p => p.Nome)
        };

        produtosFiltrados = produtosFiltradosTemp.ToList();
        
        CalcularPaginacao();
        StateHasChanged();
    }

