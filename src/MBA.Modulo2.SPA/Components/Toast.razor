@* Componentes/Toast.razor *@
@if (Show)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast show align-items-center @ColorClass border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @Message 
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="Close" aria-label="Fechar"></button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Message { get; set; }
    [Parameter] public string ColorClass { get; set; } = "text-bg-success";
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}

