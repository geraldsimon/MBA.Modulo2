@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <header class="top-row px-4">  
            <div class="d-flex align-items-center w-100">
                <div class="ms-auto d-flex align-items-center gap-3">
                    <LoginDisplay />
                    <ThemeToggle />
                </div>
            </div>
